<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Green" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background_green</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:listSelector">@drawable/selector</item>
    </style>
    <style name="Theme.TitleGreen" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:listSelector">@drawable/selector</item>
        <item name="android:textColor">#000000</item>  
    </style>
</resources>
